{
  "name": "merge-nb",
  "displayName": "MergeNB",
  "description": "Rich Jupyter Notebook Merge Conflict Resolver",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:jupyter-notebook",
    "workspaceContains:**/*.ipynb"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "merge-nb.findConflicts",
        "title": "Find Notebooks with Merge Conflicts",
        "category": "MergeNB",
        "icon": "$(git-merge)"
      },
      {
        "command": "merge-nb.resolveCurrentFile",
        "title": "Resolve Merge Conflicts",
        "category": "MergeNB",
        "icon": "$(warning)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .ipynb",
          "command": "merge-nb.findConflicts",
          "group": "3_compare"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname == .ipynb && mergeNB.hasConflicts",
          "command": "merge-nb.resolveCurrentFile",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "merge-nb.findConflicts",
          "when": "true"
        },
        {
          "command": "merge-nb.resolveCurrentFile",
          "when": "resourceExtname == .ipynb && mergeNB.hasConflicts"
        }
      ]
    },
    "keybindings": [
      {
        "command": "merge-nb.findConflicts",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "resourceExtname == .ipynb"
      }
    ],
    "configuration": {
      "title": "MergeNB",
      "properties": {
        "mergeNB.autoResolve.executionCount": {
          "type": "boolean",
          "default": true,
          "description": "Automatically resolve execution count differences by setting to null"
        },
        "mergeNB.autoResolve.kernelVersion": {
          "type": "boolean",
          "default": true,
          "description": "Automatically resolve kernel version differences by using local version"
        },
        "mergeNB.autoResolve.stripOutputs": {
          "type": "boolean",
          "default": true,
          "description": "Automatically strip outputs from cells with conflicts"
        },
        "mergeNB.ui.showCellHeaders": {
          "type": "boolean",
          "default": false,
          "description": "Show cell type, execution count, and cell index in the conflict resolution view"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:integration": "mocha --timeout 20000 -r ts-node/register src/test/integration/mergeConflict.test.ts",
    "test:cli": "npx ts-node src/test/cli-test.ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^10.7.0",
    "ts-node": "^10.9.2"
  }
}
